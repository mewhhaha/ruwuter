{
    "name": "@mewhhaha/ruwuter",
    "version": "0.1.38",
    "description": "TypeScript web router designed exclusively for Cloudflare Workers with file-system routing and streaming JSX",
    "publish": {
        "include": ["deno.json", "README.md", "src"]
    },
    "exports": {
        ".": "./src/router.ts",
        "./components": "./src/components/index.ts",
        "./events": "./src/events.ts",
        "./fs-routes": "./src/fs-routes/js.ts",
        "./types": "./src/types.ts",
        "./jsx-runtime": "./src/runtime/jsx-runtime.ts",
        "./jsx-dev-runtime": "./src/runtime/jsx-dev-runtime.ts",
        "./client.js": "./src/runtime/client.ts",
        "./resolve.js": "./src/runtime/resolve.ts",
        "./swap.js": "./src/runtime/swap.ts"
    },
    "bin": {
        "fs-routes": "./src/fs-routes/routes.ts"
    },
    "tasks": {
        "test": "deno test -A",
        "test:dom": "deno test -A",
        "test:workers": "deno run -A npm:vitest run -c vitest.config.ts",
        "lint": "deno run -A npm:oxlint --max-warnings=0",
        "format": "deno run -A npm:prettier . --check",
        "typecheck": "deno check -A src/ test/ test-dom/",
        "cf-typegen": "wrangler typegen"
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "@mewhhaha/ruwuter",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "DOM.AsyncIterable",
            "deno.ns"
        ],
        "verbatimModuleSyntax": true,
        "types": ["./src/global.workers.d.ts"]
    },
    "license": "MIT",
    "nodeModulesDir": "auto",
    "lint": {
        "rules": {
            "include": ["recommended"]
        }
    },
    "fmt": {
        "lineWidth": 100
    },
    "imports": {
        "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@^0.1.56",
        "@cloudflare/workers-types": "npm:@cloudflare/workers-types@^4.20251011.0",
        "@mewhhaha/ruwuter/jsx-runtime": "./src/runtime/jsx-runtime.ts",
        "@mewhhaha/ruwuter/jsx-dev-runtime": "./src/runtime/jsx-dev-runtime.ts",
        "@mewhhaha/ruwuter/events": "./src/events.ts",
        "@mewhhaha/ruwuter/swap": "./src/runtime/swap.ts",
        "urlpattern-polyfill": "npm:urlpattern-polyfill@^10.1.0"
    }
}
